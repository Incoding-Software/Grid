
@using Grid.Components
@using GridUI.Models
@using GridUI.Queries


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sorting";
}



<div class="container">
    <div class="row col-md-12" style="margin-top:50px;">

        <h1>Sortable for column</h1>

        <div class="example">
            @(Html.Grid<ProductVm>()
                      .Id("ColumnSortableExample")
                      .Styling(BootstrapTable.Hover)
                      .Columns(column =>
                      {
                          column.Bound(r => r.Name)
                              .Title("Product Name")
                              .Sortable(GetProductsQuery.SortType.Name, true)
                              .Width(200);

                          column.Bound(r => r.Price)
                              .Width(200)
                              .Sortable(GetProductsQuery.SortType.Price);

                          column.Bound(r => r.Date)
                              .Title("Date of made")
                              .Width(150);
                      })
                      .AjaxGet(Url.Action("GetProducts", "Home")))
        </div>
